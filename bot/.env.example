# LLM API configuration
# For Groq (free, fast): https://api.groq.com/openai/v1/chat/completions
# For OpenAI: https://api.openai.com/v1/chat/completions
LLM_API_URL=https://api.groq.com/openai/v1/chat/completions
LLM_MODEL=llama-3.1-8b-instant
LLM_API_KEY=your_api_key_here

# Sync endpoint authentication token (change this in production!)
SYNC_TOKEN=your-secret-sync-token-here

# Appwrite configuration for event syncing
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here
